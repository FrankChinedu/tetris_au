{
  "compilerOptions": {
    "typeRoots": [
      "@types",
      "./node_modules/@types",
    ],
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": ["node_modules", "**/*.spec.ts", "client"]
}
